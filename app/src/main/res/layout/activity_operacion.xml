<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/valor1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor 1: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valor2TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valor1TextView"
        android:layout_marginTop="16dp"
        android:text="Valor 2: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valor2TextView"
        android:layout_marginTop="16dp"
        android:text="Resultado: "
        android:textSize="18sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/volverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultadoTextView"
        android:layout_marginTop="16dp"
        android:backgroundTint="#49CFBB"
        android:onClick="volver1"
        android:text="Volver" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="329dp"
        android:layout_height="298dp"
        android:layout_below="@+id/volverButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="166dp"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>